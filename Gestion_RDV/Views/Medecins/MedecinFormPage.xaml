<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Gestion_RDV.Views.Medecins.MedecinFormPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Gestion_RDV.ViewModels.Medecins"
    Title="Médecin"
    BackgroundColor="#0F172A">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <!-- En-tête -->
            <VerticalStackLayout Spacing="10">                  
                <Label
                    x:Name="TitleLabel"
                    FontAttributes="Bold"
                    FontSize="28"
                    Text="Nouveau Médecin"  
                    TextColor="White" />
                
                <BoxView
                    HeightRequest="3"
                    BackgroundColor="#2563EB"
                    WidthRequest="60"
                    HorizontalOptions="Start"
                    CornerRadius="2" />
            </VerticalStackLayout>

            <!-- Icône du médecin -->
            <Border
                BackgroundColor="#2563EB"
                HeightRequest="100"
                HorizontalOptions="Center"
                StrokeThickness="0"
                WidthRequest="100"
                Margin="0,10,0,20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="50" />
                </Border.StrokeShape>

                <Label
                    FontFamily="SegoeMDL2Assets"
                    FontSize="50"
                    HorizontalOptions="Center"
                    Text="&#xE77B;"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Border>

            <!-- Formulaire -->
            <Frame
                BackgroundColor="#1E293B"
                BorderColor="Transparent"
                CornerRadius="15"
                HasShadow="False"
                Padding="20">

                <VerticalStackLayout Spacing="20">

                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Informations personnelles"
                        TextColor="White" />

                    <!-- Nom -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontSize="14"
                            Text="Nom *"
                            TextColor="#94A3B8" />
                        <Frame
                            BackgroundColor="#0F172A"
                            BorderColor="#334155"
                            CornerRadius="8"
                            HasShadow="False"
                            Padding="0">
                            <Entry
                                Placeholder="Ex: Leblanc"
                                PlaceholderColor="#64748B"
                                Text="{Binding LastName}"
                                TextColor="White" />
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Prénom -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontSize="14"
                            Text="Prénom *"
                            TextColor="#94A3B8" />
                        <Frame
                            BackgroundColor="#0F172A"
                            BorderColor="#334155"
                            CornerRadius="8"
                            HasShadow="False"
                            Padding="0">
                            <Entry
                                Placeholder="Ex: Jean"
                                PlaceholderColor="#64748B"
                                Text="{Binding FirstName}"
                                TextColor="White" />
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Spécialité -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontSize="14"
                            Text="Spécialité *"
                            TextColor="#94A3B8" />
                        <Frame
                            BackgroundColor="#0F172A"
                            BorderColor="#334155"
                            CornerRadius="8"
                            HasShadow="False"
                            Padding="0">
                            <Entry
                                Placeholder="Ex: Médecin généraliste, Cardiologue, Pédiatre..."
                                PlaceholderColor="#64748B"
                                Text="{Binding Specialite}"
                                TextColor="White" />
                        </Frame>
                    </VerticalStackLayout>

                    <BoxView
                        HeightRequest="1"
                        BackgroundColor="#334155"
                        Margin="0,10" />

                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Coordonnées"
                        TextColor="White" />

                    <!-- Téléphone -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontSize="14"
                            Text="Téléphone"
                            TextColor="#94A3B8" />
                        <Frame
                            BackgroundColor="#0F172A"
                            BorderColor="#334155"
                            CornerRadius="8"
                            HasShadow="False"
                            Padding="0">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label
                                    Grid.Column="0"
                                    FontFamily="SegoeMDL2Assets"
                                    FontSize="18"
                                    Margin="15,0,10,0"
                                    Text="&#xE717;"
                                    TextColor="#64748B"
                                    VerticalOptions="Center" />
                                <Entry
                                    Grid.Column="1"
                                    Keyboard="Telephone"
                                    Placeholder="Ex: 01 23 45 67 89"
                                    PlaceholderColor="#64748B"
                                    Text="{Binding Phone}"
                                    TextColor="White" />
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontSize="14"
                            Text="Email"
                            TextColor="#94A3B8" />
                        <Frame
                            BackgroundColor="#0F172A"
                            BorderColor="#334155"
                            CornerRadius="8"
                            HasShadow="False"
                            Padding="0">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label
                                    Grid.Column="0"
                                    FontFamily="SegoeMDL2Assets"
                                    FontSize="18"
                                    Margin="15,0,10,0"
                                    Text="&#xE715;"
                                    TextColor="#64748B"
                                    VerticalOptions="Center" />
                                <Entry
                                    Grid.Column="1"
                                    Keyboard="Email"
                                    Placeholder="Ex: medecin@cabinet.fr"
                                    PlaceholderColor="#64748B"
                                    Text="{Binding Email}"
                                    TextColor="White" />
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <Label
                        FontSize="12"
                        Text="* Champs obligatoires"
                        TextColor="#64748B"
                        Margin="0,10,0,0" />

                </VerticalStackLayout>
            </Frame>

            <!-- Boutons d'action -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,10,0,0">
                
                <!-- Bouton Annuler -->
                <Button
                    Grid.Column="0"
                    BackgroundColor="#334155"
                    BorderWidth="0"
                    Command="{Binding CancelCommand}"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Text="Annuler"
                    TextColor="White" />

                <!-- Bouton Enregistrer -->
                <Button
                    Grid.Column="1"
                    BackgroundColor="#2563EB"
                    BorderWidth="0"
                    Command="{Binding SaveCommand}"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Text="Enregistrer"
                    TextColor="White" />
            </Grid>

            <!-- Indicateur de chargement -->
            <ActivityIndicator
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                Color="#2563EB"
                HeightRequest="40" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
