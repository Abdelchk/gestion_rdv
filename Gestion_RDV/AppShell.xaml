<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Gestion_RDV.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:patients="clr-namespace:Gestion_RDV.Views.Patients"
    xmlns:dashboard="clr-namespace:Gestion_RDV.Views.Dashboard">
    

    <TabBar>

        <ShellContent
        Title="Tableau de Bord"
        ContentTemplate="{DataTemplate dashboard:DashboardPage}" />

        <ShellContent
        Title="Patients"
        ContentTemplate="{DataTemplate patients:PatientListPage}" />
        

        <ShellContent Route="PatientFormPage"
         ContentTemplate="{DataTemplate patients:PatientFormPage}" />
 

    </TabBar>

</Shell>
