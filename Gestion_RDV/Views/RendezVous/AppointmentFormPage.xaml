<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Gestion_RDV.Views.RendezVous.AppointmentFormPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Gestion_RDV.ViewModels.RendezVous"
    xmlns:models="clr-namespace:Gestion_RDV.Models"
    Title="Rendez-vous"
    BackgroundColor="#0F172A">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <!-- En-tête -->
            <VerticalStackLayout Spacing="10">
                <Label
                    x:Name="TitleLabel"
                    FontAttributes="Bold"
                    FontSize="28"
                    Text="Nouveau Rendez-vous"
                    TextColor="White" />
                
                <BoxView
                    HeightRequest="3"
                    BackgroundColor="#2563EB"
                    WidthRequest="60"
                    HorizontalOptions="Start"
                    CornerRadius="2" />
            </VerticalStackLayout>

            <!-- Icône -->
            <Border
                BackgroundColor="#2563EB"
                HeightRequest="100"
                HorizontalOptions="Center"
                StrokeThickness="0"
                WidthRequest="100"
                Margin="0,10,0,20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="50" />
                </Border.StrokeShape>

                <Label
                    FontFamily="SegoeMDL2Assets"
                    FontSize="50"
                    HorizontalOptions="Center"
                    Text="&#xE787;"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Border>

            <!-- Formulaire -->
            <Frame
                BackgroundColor="#1E293B"
                BorderColor="Transparent"
                CornerRadius="15"
                HasShadow="False"
                Padding="20">

                <VerticalStackLayout Spacing="20">

                    <!-- Patient -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontSize="14"
                            Text="Patient *"
                            TextColor="#94A3B8" />
                        <Frame
                            BackgroundColor="#0F172A"
                            BorderColor="#334155"
                            CornerRadius="8"
                            HasShadow="False"
                            Padding="0">
                            <Picker
                                ItemsSource="{Binding Patients}"
                                ItemDisplayBinding="{Binding FullName}"
                                SelectedItem="{Binding SelectedPatient}"
                                Title="Sélectionner un patient"
                                TextColor="White" />
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Médecin -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontSize="14"
                            Text="Médecin *"
                            TextColor="#94A3B8" />
                        <Frame
                            BackgroundColor="#0F172A"
                            BorderColor="#334155"
                            CornerRadius="8"
                            HasShadow="False"
                            Padding="0">
                            <Picker
                                ItemsSource="{Binding Medecins}"
                                ItemDisplayBinding="{Binding FullName}"
                                SelectedItem="{Binding SelectedMedecin}"
                                Title="Sélectionner un médecin"
                                TextColor="White" />
                        </Frame>
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        
                        <!-- Date -->
                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Label
                                FontSize="14"
                                Text="Date *"
                                TextColor="#94A3B8" />
                            <Frame
                                BackgroundColor="#0F172A"
                                BorderColor="#334155"
                                CornerRadius="8"
                                HasShadow="False"
                                Padding="0">
                                <DatePicker
                                    Date="{Binding Date}"
                                    TextColor="White" />
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Heure -->
                        <VerticalStackLayout Grid.Column="1" Spacing="8">
                            <Label
                                FontSize="14"
                                Text="Heure *"
                                TextColor="#94A3B8" />
                            <Frame
                                BackgroundColor="#0F172A"
                                BorderColor="#334155"
                                CornerRadius="8"
                                HasShadow="False"
                                Padding="0">
                                <TimePicker
                                    Time="{Binding Time}"
                                    TextColor="White" />
                            </Frame>
                        </VerticalStackLayout>

                    </Grid>

                    <!-- Type -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontSize="14"
                            Text="Type de rendez-vous *"
                            TextColor="#94A3B8" />
                        <Frame
                            BackgroundColor="#0F172A"
                            BorderColor="#334155"
                            CornerRadius="8"
                            HasShadow="False"
                            Padding="0">
                            <Picker
                                SelectedItem="{Binding Type}"
                                Title="Sélectionner le type"
                                TextColor="White">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type models:AppointmentType}">
                                        <models:AppointmentType>Consultation</models:AppointmentType>
                                        <models:AppointmentType>Controle</models:AppointmentType>
                                        <models:AppointmentType>Urgence</models:AppointmentType>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Statut -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontSize="14"
                            Text="Statut *"
                            TextColor="#94A3B8" />
                        <Frame
                            BackgroundColor="#0F172A"
                            BorderColor="#334155"
                            CornerRadius="8"
                            HasShadow="False"
                            Padding="0">
                            <Picker
                                SelectedItem="{Binding Status}"
                                Title="Sélectionner le statut"
                                TextColor="White">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type models:AppointmentStatus}">
                                        <models:AppointmentStatus>Normal</models:AppointmentStatus>
                                        <models:AppointmentStatus>Urgent</models:AppointmentStatus>
                                        <models:AppointmentStatus>Cancelled</models:AppointmentStatus>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Frame>
                    </VerticalStackLayout>

                    <BoxView
                        HeightRequest="1"
                        BackgroundColor="#334155"
                        Margin="0,10" />

                    <!-- Notes -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontSize="14"
                            Text="Notes"
                            TextColor="#94A3B8" />
                        <Frame
                            BackgroundColor="#0F172A"
                            BorderColor="#334155"
                            CornerRadius="8"
                            HasShadow="False"
                            Padding="10">
                            <Editor
                                Placeholder="Notes sur le rendez-vous..."
                                PlaceholderColor="#64748B"
                                Text="{Binding Notes}"
                                TextColor="White"
                                HeightRequest="100"
                                AutoSize="TextChanges" />
                        </Frame>
                    </VerticalStackLayout>

                    <Label
                        FontSize="12"
                        Text="* Champs obligatoires"
                        TextColor="#64748B"
                        Margin="0,10,0,0" />

                </VerticalStackLayout>
            </Frame>

            <!-- Boutons d'action -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,10,0,0">
                
                <!-- Bouton Annuler -->
                <Button
                    Grid.Column="0"
                    BackgroundColor="#334155"
                    BorderWidth="0"
                    Command="{Binding CancelCommand}"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Text="Annuler"
                    TextColor="White" />

                <!-- Bouton Enregistrer -->
                <Button
                    Grid.Column="1"
                    BackgroundColor="#2563EB"
                    BorderWidth="0"
                    Command="{Binding SaveCommand}"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Text="Enregistrer"
                    TextColor="White" />
            </Grid>

            <!-- Indicateur de chargement -->
            <ActivityIndicator
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                Color="#2563EB"
                HeightRequest="40" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
