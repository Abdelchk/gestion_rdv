<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gestion_RDV.ViewModels.RendezVous"
             x:Class="Gestion_RDV.Views.RendezVous.AppointmentListPage"
             Title="Rendez-vous">

    <ContentPage.BindingContext>
        <vm:AppointmentListViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Appointments}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10">
                    <Label Text="{Binding Start}" />
                    <Label Text="{Binding Type}" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>