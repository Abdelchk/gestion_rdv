<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Gestion_RDV.Views.Patients.PatientFormPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:Gestion_RDV.ViewModels.Patients"
    Title="Nouveau Patient">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Informations du Patient"
               FontAttributes="Bold"
               FontSize="22" />

        <Entry Placeholder="Nom" Text="{Binding LastName}"/>
        <Entry Placeholder="Prénom" Text="{Binding FirstName}"/>
        <Entry Placeholder="Email" Text="{Binding Email}"/>
        <Entry Placeholder="Téléphone" Text="{Binding Phone}"/>
        <Entry Placeholder="Date de naissance (dd/MM/yyyy)" Text="{Binding BirthDateString}"/>

        <Editor Placeholder="Notes médicales"
                AutoSize="TextChanges"
                Text="{Binding Notes}" />

        <Button Text="Enregistrer"
                Command="{Binding SaveCommand}"
                BackgroundColor="#4CAF50"
                TextColor="White" />

    </VerticalStackLayout>

</ContentPage>
